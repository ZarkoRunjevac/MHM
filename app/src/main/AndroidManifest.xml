<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zarkorunjevac.mhm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.zarkorunjevac.mhm.MhmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.zarkorunjevac.mhm.ui.activity.MainActivity"></activity>
        <activity
            android:name="com.zarkorunjevac.mhm.ui.activity.MusicListActivity"
            android:label="@string/title_activity_music_list"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zarkorunjevac.mhm.ui.activity.FullScreenPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_screen_player"
            android:theme="@style/FullscreenTheme"></activity>
        <activity android:name="com.zarkorunjevac.mhm.ui.activity.TrackListActivity"></activity>

        <service
            android:name="com.zarkorunjevac.mhm.service.MusicPlayerService"
            android:enabled="true"
            android:process=":remote"
            android:exported="true"></service><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>