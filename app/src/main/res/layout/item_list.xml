<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/md_keylines">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/track_thumbnail"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        android:src="@drawable/paris_avatar"
        />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:layout_toRightOf="@+id/track_thumbnail"
        android:text="@string/item_title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading" />

    <TextView
        android:id="@+id/track_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_title"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/track_thumbnail"
        android:textColor="@color/list_artist_grey"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/item_desc"

        android:textSize="@dimen/track_artist" />

</RelativeLayout>
